<Window x:Class="Lab_6_C.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_6_C"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button x:Name="сreateFile" Content="Создать" HorizontalAlignment="Left" Margin="26,34,0,0" VerticalAlignment="Top" Width="75" Click="сreateFile_Click"/>
        <Button x:Name="openFile" Content="Открыть" HorizontalAlignment="Left" Margin="26,79,0,0" VerticalAlignment="Top" Width="75" Click="openFile_Click"/>
        <ScrollViewer HorizontalAlignment="Left" Height="331" Margin="124,79,0,0" VerticalAlignment="Top" Width="660">
            <TextBox x:Name="dataInsideFile"  />
        </ScrollViewer>
        <TextBox x:Name="nameFile" HorizontalAlignment="Left" Height="23" Margin="124,34,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="551"/>
        <Button x:Name="overviewFile" Content="Обзор" HorizontalAlignment="Left" Margin="680,34,0,0" VerticalAlignment="Top" Width="75" Click="overviewFile_Click"/>

    </Grid>
</Window>
