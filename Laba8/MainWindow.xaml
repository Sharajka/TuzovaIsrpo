        <Label Content="Скорость" Canvas.Left="42" Canvas.Top="90"/>
        <Button Name="PauseButton" Content="Пауза" Canvas.Left="191" Canvas.Top="166" Height="29" Width="111"/>

    </Canvas>
</Window>
